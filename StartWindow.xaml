<Window x:Class="Cliver.CefSharpController.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cliver.CefSharpController"
        mc:Ignorable="d"
        Title="StartUrlWindow" Height="auto" Width="395.04" SizeToContent="Height">
    <Grid>
        <StackPanel>
            <Label Height="auto" Width="auto" >Route Type:</Label>
            <ComboBox Name="RouteType" x:FieldModifier="public" >
                <ComboBoxItem Name="ListToData">List Page and Data Page are diffrent</ComboBoxItem>
                <ComboBoxItem Name="DataInList">List Page and Data Page are the same</ComboBoxItem>
            </ComboBox>
            <StackPanel Orientation="Horizontal">
                <Label Height="auto" Width="auto" >Start Page Urls:</Label>
                                <Button Name="input_file">Load From File</Button>
            </StackPanel>
            <TextBox x:Name="StartUrl" Height="auto" Width="auto"  x:FieldModifier="public"  TextWrapping="Wrap" AcceptsReturn="True"/>
            <Button Name="ok">Ok</Button>
        </StackPanel>
    </Grid>
</Window>
